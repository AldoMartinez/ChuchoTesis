doctype html
html(lang='es')
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible', content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
		meta(name='description', content='')
		meta(name='author', content='')
		title SB Admin 2 - Login
		// Custom fonts for this template
		link(href='vendor/fontawesome-free/css/all.min.css', rel='stylesheet', type='text/css')
		link(href='https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i', rel='stylesheet')
		// Custom styles for this template
		link(href='css/sb-admin-2.min.css', rel='stylesheet')
	body.bg-gradient-primary
		.container
			// Outer Row
			.row.justify-content-center
				.col-xl-10.col-lg-12.col-md-9
					.card.o-hidden.border-0.shadow-lg.my-5
						.card-body.p-0
							// Nested Row within Card Body
							.row
								.col-lg-6.d-none.d-lg-block.bg-login-image
								.col-lg-6
									.p-5
										.text-center
											h1.h4.text-gray-900.mb-4 ¡Bienvenido!
										form.user(action="/inicio" method="POST")
											.form-group
												input#correo.form-control.form-control-user(type='email', aria-describedby='emailHelp', placeholder='Ingresa tu correo electrónico...', name="correo")
											.form-group
												input#contrasena.form-control.form-control-user(type='password', placeholder='Contraseña', name="contrasena")
											//
												<div class="form-group">
												<div class="custom-control custom-checkbox small">
												<input type="checkbox" class="custom-control-input" id="customCheck">
												<label class="custom-control-label" for="customCheck">Remember Me</label>
												</div>
												</div>
											input.btn.btn-primary.btn-user.btn-block(type="submit", value="Iniciar Sesión")
										hr
										.text-center
											a.small(href='/registro') ¡Crea una cuenta!
		// Bootstrap core JavaScript
		script(src='vendor/jquery/jquery.min.js')
		script(src='vendor/bootstrap/js/bootstrap.bundle.min.js')
		// Core plugin JavaScript
		script(src='vendor/jquery-easing/jquery.easing.min.js')
		// Custom scripts for all pages
		script(src='js/sb-admin-2.min.js')