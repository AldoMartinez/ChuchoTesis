extends ../layout/index
block tables

    // DataTables
    link(rel="stylesheet", href="https://cdn.datatables.net/buttons/1.5.6/css/buttons.dataTables.min.css")
    link(rel="stylesheet", href="/css/dataTable.css")

    // Pasa el array de las laminas al javascript file
    script(type='text/javascript').                                                   
        var data =!{JSON.stringify(laminas)};
    // Begin Page Content
    .container-fluid
        // Page Heading
        .d-sm-flex.align-items-center.justify-content-between.mb-4
            h1.h3.mb-2.text-gray-800 Datos
        // DataTales Example
        .card.shadow.mb-4
            .card-header.py-3
                h6.m-0.font-weight-bold.text-primary Datos de las láminas registradas
            .card-body
                form.user(action="/tabla", method="POST")
                    .row.justify-content-center.align-self-center
                        .col-lg-2.mb-2.justify-content-center.align-self-center
                            p.text-center Selecciona un mes
                        .col-lg-4.mb-2.justify-content-center.align-self-center
                            input#seleccionMes.form-control(type='month', name="mes", value=fechaPicker)
                        .col-lg-2.mb-2.justify-content-center.align-self-center
                            button.btn.btn-secondary.btn-icon-split.btn-buscar(type='submit', value="Buscar")
                                span.icon.text-white-50
                                    i.fas.fa-search
                                span.text|Buscar
                .table-responsive
                    table#dataTable.table.table-bordered.display.nowrap(width='100%', cellspacing='0')
                        thead
                            tr
                                th id
                                th Linea producción
                                th PRAM
                                th Ancho
                                th Largo
                                th Espesor
                                th Tcinta
                                th Tpaila
                                th Aluminio efectivo
                                th Velocidad
                                th Dia
                        tbody#registros
                            if(laminas)
                                each lamina in laminas
                                    tr
                                        td=lamina.lamina_id
                                        td=lamina.linea_produccion.nombre
                                        td=lamina.pram
                                        td=lamina.ancho
                                        td=lamina.largo
                                        td=lamina.espesor
                                        td=lamina.temperatura_cinta
                                        td=lamina.temperatura_paila
                                        td=lamina.al_efectivo
                                        td=lamina.velocidad
                                        td=lamina.fecha
    // /.container-fluid
