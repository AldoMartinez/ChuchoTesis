extends ../layout/index
block index
    .container-fluid
        // Page Heading
        .d-sm-flex.align-items-center.justify-content-between.mb-4
            h1.h3.mb-0.text-gray-800 Ingreso de datos
        // - Ingreso de Datos -
        .row
            .col-lg-6.offset-lg-3
                .card.shadow.mb-4
                    // Card Header - Dropdown
                    .card-header.py-3.d-flex.flex-row.align-items-center.justify-content-between
                        h6.m-0.font-weight-bold.text-primary Datos
                    // Card Body
                    .card-body
                        form.user(action='/inicio', method="POST")
                            .form-group
                                input#exampleInputEmail.form-control.form-control-user(type='text', placeholder='PRAM', name="pram", value=pram)
                            .form-group.row
                                .col-sm-4.mb-3.mb-sm-0
                                    input#exampleInputEmail.form-control.form-control-user(type='number', placeholder='Ancho', name="ancho", value=ancho, step=0.001)
                                .col-sm-4.mb-3.mb-sm-0
                                    input#exampleInputEmail.form-control.form-control-user(type='number', placeholder='Largo', name="largo", value=largo, step=0.001)
                                .col-sm-4
                                    input#exampleInputEmail.form-control.form-control-user(type='number', placeholder='Espesor', name="espesor", value=espesor, step=0.001)
                            .form-group.row
                                .col-sm-6.mb-3.mb-sm-0
                                    input#exampleInputEmail.form-control.form-control-user(type='number', placeholder='Temperatura cinta', name="temperatura_cinta", value=temperatura_cinta, step=0.001)
                                .col-sm-6
                                    input#exampleInputEmail.form-control.form-control-user(type='number', placeholder='Temperatura ba√±o', name="temperatura_bano", value=temperatura_bano, step=0.001)
                            .form-group
                                input#exampleInputEmail.form-control.form-control-user(type='number', placeholder='Aluminio efectivo', name="al_efectivo", value=al_efectivo, step=0.001)
                            .form-group
                                input#exampleInputEmail.form-control.form-control-user(type='number', placeholder='Hierro', name="hierro", value=hierro, step=0.001)
                            .form-group
                                input#exampleInputEmail.form-control.form-control-user(type='number', placeholder='Velocidad', name="velocidad", value=velocidad, step=0.001)
                            .form-group.text-center
                                button.btn.btn-success.btn-icon-split(type="submit", value="Guardar datos")
                                    span.icon.text-white-50
                                        i.fas.fa-check
                                    span.text Guardar datos
                        .col-lg-12
                            if(errores)
                                each error in errores
                                    .card.bg-danger.text-white-shadow
                                        .card-body.erroresMS.text-center.text-white=error.mensaje
                            if(successMessage)
                                .card.bg-success.text-white-shadow
                                    .card-body.erroresMS.text-center.text-white=successMessage