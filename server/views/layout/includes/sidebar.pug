        a.nav-link(href='/lineas_produccion')
            i.fas.fa-industry
            span Lineas de producción
    // Divider
    hr.sidebar-divider.my-0
    // Nav Item - registro_historico
    li#graficasSB.nav-item(class = (ruta === '/registro_historico' ? 'active' : ''))
        a.nav-link(href='/registro_historico')
            i.fas.fa-history
            span Registro Histórico
